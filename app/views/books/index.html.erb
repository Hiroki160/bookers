<div class="list-wrap">
  <% @books.each do |book| %>
</div>


<div class="list-comment">
  <span class="book-body"><%= book.body %></span>
  <span class="book-title"><%= book.title %></span>
</div>


<%= link_to "show", book_path(book.id) %>
<%= link_to "edit", "/lists/index" %>
<%= link_to "destroy", "/lists", method: :delete, "date-confirm" => "Are you sure?" %>

<% end %>