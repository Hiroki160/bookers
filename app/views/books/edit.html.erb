<h1>Editing book</h1>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<div class= "actions"><%= f.submit 'Update book' %></div>


<span><%= link_to "Show", book_path(@book.id)  %></span>
<span><%= link_to "Back", new_book_path %></span>

<% end %>
